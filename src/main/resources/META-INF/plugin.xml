<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.artusm.jetbrainspluginjiraworklog</id>
    <name>Jira Worklog Timer</name>
    <vendor>artusm</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Services -->
        <projectService serviceImplementation="com.github.artusm.jetbrainspluginjiraworklog.services.JiraWorklogTimerService"/>
        <projectService serviceImplementation="com.github.artusm.jetbrainspluginjiraworklog.services.JiraOfflineWorklogService"/>
        <applicationService serviceImplementation="com.github.artusm.jetbrainspluginjiraworklog.config.JiraSettings"/>
        <applicationService serviceImplementation="com.github.artusm.jetbrainspluginjiraworklog.git.GitBranchParser"/>
        
        <!-- Status Bar Widget -->
        <statusBarWidgetFactory id="com.github.artusm.JiraWorklogWidget" 
                                implementation="com.github.artusm.jetbrainspluginjiraworklog.ui.JiraWorklogWidgetFactory" 
                                order="before memoryUsageWidget"/>
        
        <!-- Settings -->
        <applicationConfigurable instance="com.github.artusm.jetbrainspluginjiraworklog.config.JiraWorklogConfigurable"/>
        
        <!-- Startup Activity for Onboarding -->
        <postStartupActivity implementation="com.github.artusm.jetbrainspluginjiraworklog.startup.OnboardingStartupActivity"/>
        
        <!-- Notification Groups -->
        <notificationGroup id="Jira Worklog Timer" displayType="BALLOON" isLogByDefault="false"/>
    </extensions>
    
    <extensions defaultExtensionNs="Git4Idea">
        <!-- Git Repository Change Listener -->
        <gitRepositoryChangeListener implementation="com.github.artusm.jetbrainspluginjiraworklog.git.BranchChangeListener"/>
    </extensions>
    
    <applicationListeners>
        <!-- Window Focus and Project Switch Listener for Auto-Pause -->
        <listener class="com.github.artusm.jetbrainspluginjiraworklog.listeners.WindowFocusListener"
                  topic="com.intellij.openapi.application.ApplicationActivationListener"/>
    </applicationListeners>
    

</idea-plugin>
